# CSS snippets
# Combo of TextMate default, mCSS and personal helpers

# backgrounds
snippet background All
	background: #${1:DDD} url(${2:path}) ${3:repeat/repeat-x/repeat-y/no-repeat} ${4:scroll/fixed} ${5:top left/top center/top right/center left/center center/center right/bottom left/bottom center/bottom right/x-% y-%/x-pos y-pos};${6}
snippet background Color Hex
	background-color: #${1:DDD};${2}
snippet background Color RGB
	background-color: rgb(${1:255}, ${2:255}, ${3:255});${4}
snippet background Color RGBA
	background-color: rgba(${1:255}, ${2:255}, ${3:255}, ${4:0.5});${5}
snippet background Color Name
	background-color: ${1:magenta};${2}
snippet background Color Transparent
	background-color: transparent;${1}
snippet background Image URL
	background-image: url(${1:path});${2}
snippet background Image None
	background-image: none;${1}
snippet background Attachment
	background-attachment: ${1:scroll/fixed};$2
snippet background Position
	background-position: ${1:top left/top center/top right/center left/center center/center right/bottom left/bottom center/bottom right/x-% y-%/x-pos y-pos};${2}
snippet background Repeat
	background-repeat: ${1:repeat/repeat-x/repeat-y/no-repeat};${2}
# background shortcuts
snippet bg
	background: #${1:DDD} url(${2:path}) ${3:repeat/repeat-x/repeat-y/no-repeat} ${4:scroll/fixed} ${5:top left/top center/top right/center left/center center/center right/bottom left/bottom center/bottom right/x-% y-%/x-pos y-pos};${6}
snippet bgc
	background-color: ${1:color};${2}
# borders
