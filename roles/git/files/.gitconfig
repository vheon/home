[user]
	name = Andrea Cedraro
	email = a.cedraro@gmail.com
[core]
	excludesfile = ~/.cvsignore
[github]
	user = vheon
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = magenta
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
	whitespace = white reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
	branch = magenta
[alias]
	st = status
	co = checkout
	ci = commit --verbose
	aa = add --all
	di = diff
	dc = diff --cached
	amend = commit --amend

	start = "!git init && git commit --allow-empty -m 'A first empty commit to start this project'"
	l = "log --graph --pretty=tformat:'%C(yellow)%h %Cgreen(%ar) %C(blue)<%an> %C(red)%d%Creset %s'"
	r = !git l -30

	remotes = remote -v
	branches = branch -a
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[credential]
	helper = osxkeychain
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[pull]
	ff = only
